import java.util.HashMap;
import java.util.Map;
import javax.swing.text.StyledEditorKit.BoldAction;
import java.util.Vector;
import java.util.Scanner;

public class pets {
	public static Vector<cats> cat = new Vector<cats>(0);
	public static Vector<dogs> dog = new Vector<dogs>(0);
	public static Vector<fish> fsh = new Vector<fish>(0);
	public static Scanner cin = new Scanner(System.in);
	public static int reven = 0;

	public static class cats extends pets {
		private String kind;
		int price;
		private String gender;

		public void show() {
			System.out.print("kind :: " + kind + " the price :: " + price
					+ " gender :: " + gender + "\n");
		}

		cats(String namkin, String namgen, int numprice, int numnum) {
			kind = namkin;
			gender = namgen;
			price = numprice;
		}

		public void Test() {
			System.out.print("cats Word");
		}

		public void setGen(String num) {
			gender = num;
		}

		public String getGen() {
			return gender;
		}

		public void setKind(String num) {
			kind = num;
		}

		public String getKind() {
			return kind;
		}

		public void setPrice(int num) {
			price = num;
		}

		public Integer getprice() {
			return price;
		}
	}

	public static class dogs extends pets {
		private String name;
		private String gender;
		private int age;
		private int price;
		private boolean train;

		public void show() {
			System.out.print("name :: " + name + " gender :: " + gender
					+ " age :: " + age + " price :: " + price + "\n");
		}

		dogs(String nm, String gen, int ag, int pr) {
			name = nm;
			gender = gen;
			age = ag;
			price = pr;
		}

		public void settrain(boolean tr) {
			train = tr;
		}

		public boolean gettrain() {
			return train;
		}

		public void setage(int ag) {
			age = ag;
		}

		public int getage() {
			return age;
		}

		public void setPrice(int pr) {
			price = pr;
		}

		public int getprice() {
			return price;
		}

		public void setname(String nam) {
			name = nam;
		}

		public String getname() {
			return name;
		}

		public void setgender(String nam) {
			gender = nam;
		}

		public String getgender() {
			return gender;
		}

	}

	public static class fish extends pets {
		private String kind;
		private int price;
		private int number;

		public void show() {
			System.out.print("kind :: " + kind + " their price :: " + price
					+ " and number " + number + "\n");
		}

		// price and kind
		fish(String kn, int pri, int num) {
			kind = kn;
			price = pri;
			number = num;
		}

		public void setNumber(int num) {
			number = num;
		}

		public int getNumber() {
			return number;
		}

		public int getPrice() {
			return price;
		}

		public void setPrice(int pr) {
			price = pr;
		}

		public void setkind(String kn) {
			kind = kn;
		}

		public String getKind() {
			return kind;
		}
	}

	public static void SHOWCATS() {
		if (cat.size() == 0) {
			System.out.print("there is no cats :/\n");
			return;
		}
		int r = 0;
		for (cats cate : cat) {
			r++;
			System.out.print(r + " :: ");
			cate.show();
		}
	}

	public static void SHOWFESH() {
		if (fsh.size() == 0) {
			System.out.print("there is no fesh :/ \n");
			return;
		}
		int r = 0;
		for (fish fesh : fsh) {
			r++;
			System.out.print(r + " :: ");
			fesh.show();
		}
	}

	public static void SHOWDOGS() {
		if (dog.size() == 0) {
			System.out.print("there is no Dogs :/\n");
			return;
		}
		int r = 0;
		for (dogs dogg : dog) {
			r++;
			System.out.print(r + " :: ");
			dogg.show();
		}
	}

	public static void addpets() {
		int s;
		System.out.print("1 for add cat \n");
		System.out.print("2 for add dogs \n");
		System.out.print("3 for add fish \n");
		s = cin.nextInt();
		if (s == 1) {
			String nmkin, nmgen;
			int nmpri, numnm = 0;
			System.out.print("enter his kinder :: \n");
			nmkin = cin.next();
			System.out.print("enter this gender :: \n");
			nmgen = cin.next();
			System.out.print("enter his price :: \n");
			nmpri = cin.nextInt();
			cats nn = new cats(nmkin, nmgen, nmpri, numnm);
			cat.add(nn);
		} else if (s == 2) {
			String nm, gen;
			int ag, pr;
			System.out.print("enter name of name :: \n");
			nm = cin.next();
			System.out.print("enter his gender :: \n");
			gen = cin.next();
			System.out.print("enter his age :: \n");
			ag = cin.nextInt();
			System.out.print("enter the price :: \n");
			pr = cin.nextInt();
			dogs tmp = new dogs(nm, gen, ag, pr);
			dog.add(tmp);
		} else if (s == 3) {
			// String kn, int pri
			String knd;
			int pri, num;
			System.out.print("enter there kind :: \n");
			knd = cin.next();
			System.out.print("enter their price :: \n");
			pri = cin.nextInt();
			System.out.print("enter their number :: \n");
			num = cin.nextInt();
			fish tmp = new fish(knd, pri, num);
			fsh.add(tmp);
		}
	}

	public static void view_All_pets() {
		int s;
		System.out.print("1 for fish 2 for dogs 3 for cat");
		s = cin.nextInt();
		if (s == 1) {
			System.out.print("the number of them is " + fsh.size() + "\n");
			SHOWFESH();
		} else if (s == 2) {
			System.out.print("the number of them is " + dog.size() + "\n");
			SHOWDOGS();
		} else if (s == 3) {
			System.out.print("the number of them is " + cat.size() + "\n");
			SHOWCATS();
		}
	}

	public static void buy_pets() {
		while (true) {
			int s;
			System.out.print("TOTAL revenue for the day  :: " + reven + "\n");
			System.out.print("Press 1 to buy cats :: \n");
			System.out.print("Press 2 to buy fish :: \n");
			System.out.print("Press 3 to buy dogs :: \n");
			System.out.print("Press 4 to exit :: \n");
			s = cin.nextInt();
			if (s == 1) {
				SHOWCATS();
				if (cat.size() != 0) {
					System.out.print("enter the number of cats you want ::\n");
					int tmp;
					tmp = cin.nextInt();
					reven += cat.get(tmp - 1).getprice();
				}
			} else if (s == 2) {
				SHOWFESH();
				if (fsh.size() != 0) {
					System.out.print("enter the number of fish you want ::\n");
					int tmp, t;
					tmp = cin.nextInt();
					System.out.print("enter how many fish :: \n");
					t = cin.nextInt();
					fsh.get(tmp - 1)
							.setNumber(fsh.get(tmp - 1).getNumber() - t);
					reven += (t * fsh.get(tmp - 1).getPrice());
				}
			} else if (s == 3) {
				SHOWDOGS();
				if (dog.size() != 0) {
					System.out.print("enter the number of dogs you want ::\n");
					int tmp;
					tmp = cin.nextInt();
					reven += dog.get(tmp - 1).getprice();
				}
			} else if (s == 4)
				return;
		}
	}

	public static void main(String[] arr) {
		System.out.print("HELLO :: \n");
		while (true) {
			System.out.print("Press 1 to add pets :: \n");
			System.out.print("Press 2 to view all pets :: \n");
			System.out.print("Press 3 to buy pets :: \n");
			System.out.print("Press 4 exit :: \n");
			int s;
			Scanner cin = new Scanner(System.in);
			s = cin.nextInt();
			if (s == 1) {
				addpets();
			} else if (s == 2) {
				view_All_pets();
			} else if (s == 3) {
				buy_pets();
			} else if (s == 4)
				break;
			else {
				System.out.print("please try again \n");
			}
		}
	}
}